@using ExamSim4.Models

@model List<TeamMembers>
@{
    int count = 0;
}
<a class="btn btn-primary" asp-action="Create">create</a>

<table class="table">
    <thead>


        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">FullName</th>
            <th scope="col">Tm Position Name</th>
            <th scope="col">Image</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.position.Name</td>
                <td><div style="width:100px"><img width="100%" src="~/upload/Teammember/@item.ImgUrl" /></div></td>
                

                <td>
                    <a class="btn btn-secondary" asp-action="Update" asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>


        }
    </tbody>
</table>




